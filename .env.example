# Copy this file to .env and fill in the required secrets.

# Microsoft Graph / Azure AD
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""  # Required only for app (client credentials) mode
MICROSOFT_TENANT_ID=""
TARGET_EMAIL_ADDRESS=""     # Needed for app mode

# Auth mode: delegated or app
AUTH_MODE="delegated"

# Notifier: telegram or console
NOTIFIER_TYPE="console"

# Telegram (optional if using telegram notifier)
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# Gemini summarizer
SUMMARIZER_MODE="gemini"
GEMINI_MODEL="gemini-1.5-flash"
GOOGLE_API_KEY=""

# Processing limits
MAX_EMAILS="10"
